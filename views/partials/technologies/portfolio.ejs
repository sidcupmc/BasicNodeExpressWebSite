<section id="portfolio" class="portfolio section-bg">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2><%= pageInfo.technologiesSubTitle %></h2>
      <p><%= pageInfo.technologiesIntro %></p>
    </div>

    <div class="row">
      <div
        class="col-lg-12 d-flex justify-content-center"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <ul id="portfolio-flters">
          <li data-filter="*" class="filter-active">All</li>

          <% technologies.types.forEach(function (typeItem){ %>
          <li data-filter=".filter-<%= typeItem.filter %>">
            <%= typeItem.type %>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div
      class="row portfolio-container"
      data-aos="fade-up"
      data-aos-delay="200"
    >
      <% technologies.technologies.forEach(function (technologyItem){ %>
      <div
        class="col-lg-4 col-md-6 portfolio-item filter-<%= technologyItem.filter %>"
      >
        <div class="portfolio-wrap">
          <img
            src="assets/img/technologies/<%= technologyItem.picSource %>"
            class="img-fluid"
            alt="Graphic for <%= technologyItem.title %>"
          />
          <div class="portfolio-info">
            <h4>&nbsp;</h4>
            <div class="portfolio-links">
              <a
                href="<%= technologyItem.link %>"
                class="portfolio-details-lightbox"
                data-glightbox="type: external"
                title="See details for <%= technologyItem.title %>"
                ><i class="bx bx-link"></i
              ></a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
